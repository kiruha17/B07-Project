<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8dbe2">

    <!-- Title -->
    <TextView
        android:id="@+id/ecoHubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Eco Hub"
        android:textSize="24sp"
        android:textColor="#373f51"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section: Learning Resources -->
    <TextView
        android:id="@+id/learningResourcesTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Learning Resources"
        android:textSize="18sp"
        android:textColor="#009999"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ecoHubTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Learning Resources Description -->
    <TextView
        android:id="@+id/learningResourcesDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="Access a variety of articles, videos, and tools to learn about sustainability."
        android:textSize="14sp"
        android:textColor="#373f51"
        app:layout_constraintTop_toBottomOf="@id/learningResourcesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section: Market Trends -->
    <TextView
        android:id="@+id/marketTrendsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Market Trends"
        android:textSize="18sp"
        android:textColor="#009999"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/learningResourcesDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Market Trends Description -->
    <TextView
        android:id="@+id/marketTrendsDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:text="Stay updated on the latest eco-friendly products and technologies."
        android:textSize="14sp"
        android:textColor="#373f51"
        app:layout_constraintTop_toBottomOf="@id/marketTrendsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:itemIconSize="24dp"
        app:itemIconTint="#009999"
        app:itemTextColor="#009999"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>